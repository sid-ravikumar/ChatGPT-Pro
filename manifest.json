{
  "manifest_version": 3,
  "name": "OpenAI Chat Token Counter",
  "version": "1.0",
  "description": "A Chrome extension to display the token count for OpenAI chat messages.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"]
    }
  ]
}
